	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@types/node": "^24.10.1",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
